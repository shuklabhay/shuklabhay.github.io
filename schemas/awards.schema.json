{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["title", "issuer", "receivedYear", "hide", "tags"],
    "properties": {
      "title": { "type": "string" },
      "issuer": { "type": "string" },
      "receivedYear": { "type": "string" },
      "hide": { "type": "boolean" },
      "tags": {
        "type": "array",
        "items": { "type": "string", "enum": ["ml", "software", "always"] }
      }
    },
    "additionalProperties": false
  }
}
